extends layout

block content
  h1.text-2xl.mb-4 Login
  form(action="/login", method="POST" class="flex flex-col gap-2 w-64")
    input(type="text" name="username" placeholder="Username" required class="border p-2 rounded")
    input(type="password" name="password" placeholder="Password" required class="border p-2 rounded")
    button(type="submit" class="bg-green-500 text-white py-2 rounded") Login
  if message
    p.text-red-500.mt-2= message
  a.text-blue-700.mt-2(href="/register") No account? Register
